{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Happiest Countries, Top 20",
    "subtitle": "2021 values. Source: World Population Review",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },  "data": {"url": "https://raw.githubusercontent.com/levipf/levipf.github.io/main/happinessdata%20(1).csv"},
  "height": {"step": 17},
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Country",
      "type": "ordinal",
      "sort": "-x",
      "title": ""
    },
    "x": {
      "aggregate": "sum",
      "field": "Value",
      "title": "Happiness Rating"
    },
    "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "Value",
            "type": "quantitative",
            "title": "2021 Happiness Rating"
          }
        ]
  }
}
